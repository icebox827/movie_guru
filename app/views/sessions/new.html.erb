<div class="container">
  <div class="row mt-5 pt-5">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <h1 class="text-center">Sign in</h1><br />
      <%= form_for(:session, url: sessions_path, method: 'POST' ) do |f| %>
        <div class="form-group">
          <%= f.text_field :user, autofocus: true, placeholder: "Enter a username" , class: "form-control" %>
        </div><br />
        <div class="actions">
          <%= f.submit 'login' , class: "btn white bg-orange" %>
        </div>
        <% end %>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>
