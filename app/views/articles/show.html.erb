<div class="container">
  <div class="row mt-3">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <div class="card-title border-bottom pb-2">
             <h2><%= @article.title %></h2> 
             <%= image_tag "#{@article.image.downcase}", class:"cover-img full img-max-height" %>
             <h4>Category :<%= @article.category.name %></h4> 
          </div>
          <div class="card-text border-bottom pb-2">
            <p><%= @article.text %></p>
          </div>
          <div class="cart-text">
            <h4>Article Written by : <span><%= @article.author.name %></span></h4>
            
            <%= vote_or_unvote_btn(@article) %>
            <%= link_to 'Back', articles_path %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>


